<body>
    <div class="container">

        <h1>Lets play... <span id="rtd"> Roll The Dice</span> </h1>

        <h2>PLAYER ONE: <span id="player1"></span></h2>
        <h2>PLAYER TWO: <span id="player2"></span></h2>

        <div class="main">

            <div class="instructions">
                <p>How to Play:</p>
            <ul>
                <li><span id="p1name">Player 1</span> rolls their dice : The number it lands on will be added to their total.</li>
                <li><span id="p2name">Player 2</span> rolls their dice : The number it lands on will be added to their total.</li>
                <li>Whoever reaches or exceeds a score of 20 first - <strong>they win!</strong></li>
                <!-- <li><strong>However... </strong>If at any point it lands on a 6, it's<strong> game over</strong> and your total will be reset to 0.</li> -->
                <li>*The number of rolls it takes for the winner to reach 20 will be added to the leaderboard.
                    See if you can reach 20 in less rolls than your opponent.*</li>
                <li></li>
                <li><strong>Good Luck!</strong></li>
            </ul>
            </div>

        <div class="scoreboard">
            <p>Leader Board:</p>
            <table>

            </table>
        </div>

        </div>

        <div class="dice">
            <img id="one" src="images/1.png" alt="Dice shows 1">
        </div>

        <div class="game">
            <button type="button" class="btn" id="btn"> Roll the Dice </button>
        <div class="banner" id="banner">
            <h1 id="bannerText"></h1>
        </div>
        <p id="total">Total Score: 0</p>
        </div>

        <div id="playAgain" class = "playAgain" style="display: hidden;">
            <h1 id="message"></h1>
            <div class="btns">
                <btn id="yes"></btn>
                <btn id="no"></btn>
            </div>
        </div>

    </div>
        <script>
            let scores = [
    {name: "player1", clicks: 4 }
]
//[0].name to update name
//loop through the scores array find which one has appropriate name and update clicks = clicks + 1

let imgs = ["images/1.png",
            "images/2.png",
            "images/3.png",
            "images/4.png",
            "images/5.png",
            "images/6.png"
            ];

const dice = document.getElementsByClassName('dice');
let btn = document.getElementById('btn');
let yes = document.getElementById('yes');
let no = document.getElementById('no');
let total = 0;
let gameEnded = false;

btn.addEventListener("click", roll);

  let name1 = prompt("Hey Player 1, choose your player name");
  player1 = name1.charAt(0).toUpperCase() + name1.slice(1);
  document.getElementById("player1").innerHTML = `${player1}`;
  document.getElementById('p1name').innerHTML = `${player1}`

  let name2 = prompt("Hey Player 2, choose your player name");
  player2 = name2.charAt(0).toUpperCase() + name2.slice(1);
  document.getElementById("player2").innerHTML = `${player2}`;
  document.getElementById('p2name').innerHTML = `${player2}`


function roll() {
    let random = Math.ceil(Math.random()*6)
    total = total + random;
    document.querySelector('#one').setAttribute("src", imgs[random - 1]);

    if (random == 6) {
        document.getElementById("bannerText").textContent = " Game Over, you rolled a 6";
        gameEnded = true;

    } else if (total >= 20) {
        document.getElementById("bannerText").textContent = `${total}... You win!`;
        gameEnded = true;
    };

    document.querySelector("#total").innerHTML = "Total Score: " + total;

     if (!gameEnded) {
      return;
     };

     btn.removeEventListener("click", roll)
     document.getElementById('message').textContent = `Would you like to play again ${player1} & ${player2} ?`;
     yes.textContent = "Yes"
     no.textContent = "No"
     yes.addEventListener("click", play);
     no.addEventListener("click", leave);
};

main();

function play() {
        btn.addEventListener("click", roll)  
        document.getElementById("bannerText").textContent = ``;
        document.getElementById('message').textContent = ``;
        yes.textContent = ""
        no.textContent = ""
        total = 0;
        document.querySelector("#total").innerHTML = "Total Score: ";
        gameEnded = false;
};

function leave() {
    alert(`Thanks for playing ${name1}`)
        location.reload();
};
        </script>
</body>
