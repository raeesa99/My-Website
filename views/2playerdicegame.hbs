    <style>
*{
    font-family: 'Genos', sans-serif;
}

html body{
    padding: 0;
    margin: 0;
    background: radial-gradient(circle, hsla(12, 90%, 8%, 1) 22%, hsla(358, 74%, 11%, 1) 35%, hsla(348, 87%, 12%, 1) 51%, hsla(355, 77%, 22%, 1) 86%, hsla(354, 79%, 19%, 1) 91%, hsla(355, 77%, 21%, 1) 98%, hsla(353, 79%, 11%, 1) 100%, hsla(357, 80%, 28%, 1) 100%, hsla(356, 62%, 42%, 1) 100%, hsla(353, 78%, 18%, 1) 100%);
    width: 100%;
    height: 100%;
}

.container{
    padding: 20px;
}

h1{
    color:#800E13;
    font-weight: 600;
    font-size: 60px;
    margin-top: 3px;
    text-align: center;
}

#rtd {
    text-shadow: 2px 2px 3px #B43C44;
    font-size: 54px;
}

h2{
    padding: 3px;
    margin: 0px 0px 10px 0px;
    color:#800E13;
    font-weight: 500;
    font-size: 40px;
    text-align: center;
}

#player1, #player2 {
    animation: players .5s alternate infinite ease-in-out;
    text-shadow: 2px 2px 3px #B43C44;
}

@keyframes players {
    0% {
        text-shadow: 0px 0px 0px #800E13;
    }
    100% {
        text-shadow: 2px 2px 20px 0 #800E13;;
    }
}

.dice{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    padding: 30px;
    
}

img{
    border-radius: 15%;
    box-shadow: 2px 2px 20px 0 #800E13;
    width: 130px;
    height: 130px;
    animation: breathe .5s alternate infinite ease-in-out;
}

@keyframes breathe {
    0% {
        box-shadow: 0px 0px 0px #800E13;
    }
    100% {
        box-shadow: 2px 2px 20px 0 #800E13;;
    }
}

.main{
    display: flex;
    justify-content: center;
    text-align: center;
    flex-direction: row;
    align-self: center;
}

.instructions{
    border: 2px dotted #800E13;
    padding: 0px 10px 10px 10px;
    margin: 5px;
    display: flex;
    justify-content: center;
    text-align: center;
    flex-direction: column;
    width: 50%;
    align-self: center;
}

p{
    text-align: center;
    font-weight: bold;
    font-size: 30px;
    color:#800E13;
}

ul{
    margin: 0px 0px 0px 0px;
    padding: 0px 0px 0px 0px;
}

li{
    list-style-type:none;
    color: #B43C44;
    padding-top: 2px;
    font-size: 18px;
    padding-bottom: 3px;
    margin: 0px 0px 0px 0px;
}

.scoreboard{
    border: 2px dotted #800E13;
    padding: 0px 10px 10px 10px;
    margin: 5px;
    /* display: table */
    /* justify-content: center;
    text-align: center;
    flex-direction: column; */
    width: 50%;
    /* align-self: center; */
}

.game {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
}

.btn{
    background-color: #450B0B;
    border-radius: 4px;
    padding: 15px;
    border-style: none;
    color:#800E13;
    font-size: 30px;
    box-shadow: 2px 2px 10px #B43C44;
    text-align: center;
    font-family: 'Genos', sans-serif;
    font-weight: bold;
    margin-right: 12px;
    text-shadow: 1px 1px 1px #B43C44;
    letter-spacing: 0.1em;
}

.btn:hover{
    cursor: pointer;
    padding: 15px;
    box-shadow: 8px 8px 20px #800E13; ;
}

#total{
    padding: 15px;
    font-weight: bold;
    font-size: 30px;
    border-radius: 4px;
    border: 2px dotted #800E13;
    margin-left: 12px;
    box-shadow: 2px 2px 10px #B43C44;
}


.banner{
    color:#800E13;
    font-weight: 400;
    font-size: 45px;
    margin-top: 0px;
    text-shadow: 2px 2px 2px #B43C44;
    margin-left: 3px;
    margin-right: 3px;
}

.playAgain{
    padding: 10px;
    margin: 50px;
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    border: 2px dotted #800E13;
}

.btns{
    display: flex;
    flex-direction: row;
    justify-content: center;
    margin: auto;
}

#yes, #no {
    background-color: #450B0B;
    border-radius: 6px;
    padding: 20px;
    border-style: none;
    color:#800E13;
    font-size: 35px;
    box-shadow: 2px 2px 10px #B43C44;
    font-family: 'Genos', sans-serif;
    font-weight: bold;
    margin: 30px 75px 30px 75px;
    text-shadow: 1px 1px 1px #B43C44;
    letter-spacing: 0.1em;
    animation: breathe .5s alternate infinite ease-in-out;

    
}

#yes:hover{
    cursor: pointer;
    box-shadow: 8px 8px 20px #800E13; ;
}

#no:hover{
    cursor: pointer;
    box-shadow: 8px 8px 20px #800E13;

}
